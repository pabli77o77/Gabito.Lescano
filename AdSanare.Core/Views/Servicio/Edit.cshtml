@model AdSanare.Entities.Servicio
    <div class="container-fluid">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Editar Servicio</h3>
            </div>
            <form asp-antiforgery="true" asp-action="Edit" method="post">
                <input type="hidden" class="form-control" asp-for="Id" />
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Descripcion"></label>
                        <input class="form-control" asp-for="Descripcion">
                        <span class="text-danger" asp-validation-for="Descripcion"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>