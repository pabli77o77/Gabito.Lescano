@model List<UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
}


<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Agregar o eliminar usuarios de este rol</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m1">
                    <input type="hidden" asp-for="@Model[i].UserId" class="form-check-input" />
                    <input type="hidden" asp-for="@Model[i].UserName" class="form-check-input" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Actualizar" class="btn btn-primary" style="width:auto" />
            <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-primary" style="width:auto">Cancelar</a>
        </div>
    </div>
</form>