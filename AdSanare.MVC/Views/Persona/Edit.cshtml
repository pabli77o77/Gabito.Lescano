@model AdSanare.Entities.Persona

<div class="card">
    <div class="card-body">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Editar Paciente</h3>
                </div>
                <div class="box-body">
                    <form asp-antiforgery="true" asp-action="Edit" method="post">
                        <input type="hidden" class="form-control" asp-for="Id" />
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                    <label asp-for="Nombre">Nombre</label>
                                    <input type="text" class="form-control" asp-for="Nombre" />
                                    <span class="text-danger" asp-validation-for="Nombre"></span>
                            </div>
                            <div class="form-group col-md-12">
                                    <label asp-for="Apellido"></label>
                                    <input type="text" class="form-control" asp-for="Apellido" />
                                    <span class="text-danger" asp-validation-for="Apellido"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                    <label asp-for="Documento"></label>
                                    <input type="text" class="form-control" asp-for="Documento" />
                                    <span class="text-danger" asp-validation-for="Documento"></span>
                            </div>
                            <div class="form-group col-md-12">
                                    <label asp-for="FechaNacimiento"></label>
                                    <input class="form-control" asp-for="FechaNacimiento">
                                    <span class="text-danger" asp-validation-for="FechaNacimiento"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label asp-for="ObraSocial"></label>
                                <input class="form-control" asp-for="ObraSocial">
                                <span class="text-danger" asp-validation-for="ObraSocial"></span>
                            </div>
                            <div class="form-group col-md-12">
                                <label asp-for="ObraSocialNumero"></label>
                                <input class="form-control" asp-for="ObraSocialNumero">
                                <span class="text-danger" asp-validation-for="ObraSocialNumero"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label asp-for="Diagnostico"></label>
                                <input class="form-control" asp-for="Diagnostico">
                                <span class="text-danger" asp-validation-for="Diagnostico"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

